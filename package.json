{
    "name": "pcb-assebmly-checker",
    "version": "0.1.5",
    "author": "Marece Williams",
    "description": "App for programming and testing io-manager PCBs",
    "homepage": "./",
    "main": "public/main.js",
    "private": true,
    "dependencies": {
        "@emotion/react": "^11.9.3",
        "@emotion/styled": "^11.9.3",
        "@mui/icons-material": "^5.8.4",
        "@mui/material": "^5.9.1",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.3.0",
        "@testing-library/user-event": "^14.3.0",
        "electron-updater": "^5.0.5",
        "foreman": "^3.0.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router": "^6.3.0",
        "react-router-dom": "^6.3.0",
        "react-scripts": "^5.0.1",
        "serialport": "^10.4.0",
        "update-electron-app": "^2.0.1",
        "wbm-usb-device": "^0.2.57",
        "wbm-version-manager": "^0.0.51",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "dev": "nf start",
        "electron": "electron .",
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "package": "electron-builder build -c.extraMetadata.main=build/main.js --publish never",
        "deploy": "electron-builder build -c.extraMetadata.main=build/main.js --publish always",
        "upload": "yarn build && git add . && git commit -m %NPM_PACKAGE_VERSION% && git push origin master && yarn deploy ",
        "try": "yarn build && yarn package ",
        "backup": "git add . && git commit -m %NPM_PACKAGE_VERSION% && git push origin master",
        "refresh": "yarn upgrade --latest && yarn",
        "postinstall": "electron-builder install-app-deps"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "electron": "^19.0.9",
        "electron-builder": "^23.1.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/wbmmusic/assembly-checker.git"
    },
    "build": {
        "productName": "WBM Tek PCB Assembly Checker",
        "appId": "com.electron.pcbchk",
        "copyright": "WBM Tek",
        "extends": null,
        "npmRebuild": false,
        "files": [
            "build/**/*",
            "electron/*"
        ],
        "win": {
            "icon": "public/favicon.ico",
            "extraResources": [
                "public/JLink.exe",
                "public/JLinkARM.dll",
                "public/firmware/*",
                "public/USBDriver/**/*",
                "public/boardfiles/**/*"
            ]
        }
    }
}
