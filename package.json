{
  "name": "pcb-assebmly-checker",
  "version": "0.0.130",
  "author": "Marece Williams",
  "description": "App for configuring WBM Tek devices",
  "homepage": "./",
  "main": "public/main.js",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "bootstrap": "^4.5.3",
    "electron-updater": "^4.3.5",
    "foreman": "^3.0.1",
    "react": "^17.0.1",
    "react-bootstrap": "^1.4.0",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "update-electron-app": "^2.0.1",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "dev": "nf start",
    "electron": "electron .",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "install": "electron-rebuild",
    "package": "electron-builder build -c.extraMetadata.main=build/main.js --publish never",
    "deploy": "electron-builder build -c.extraMetadata.main=build/main.js --publish always",
    "upload": "yarn build && git add . && git commit -m %NPM_PACKAGE_VERSION% && git push origin master && yarn deploy ",
    "try": "yarn build && yarn package "
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "electron-rebuild": "^2.3.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wbmmusic/assembly-checker.git"
  },
  "build": {
    "productName": "WBM Tek PCB Assembly Checker",
    "appId": "com.wbm.pcbchk",
    "electronVersion": "11.1.1",
    "copyright": "WBM Tek",
    "extends": null,
    "files": [
      "build/**/*",
      "electron/*"
    ],
    "win": {
      "icon": "public/favicon.ico",
      "extraResources": [
        "public/JLink.exe",
        "public/JLinkARM.dll",
        "public/firmware/*",
        "public/temp/*",
        "public/USBDriver/**/*"
      ]
    }
  }
}
